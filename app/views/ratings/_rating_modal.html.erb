<div class="modal-header">
  <button class="close" data-dismiss="modal">Ã—</button>
  <h2>Rate: <%= beer.brewery %> <%= beer.brew %></h2>
  <div id="rating_flash_<%= beer.id %>"></div>
</div>

<div class="modal-body" style="text-align: center;">
  <%= form_for @rating, :class => "beer form-horizontal" do |f| %>
    <fieldset>
  	  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <%= f.hidden_field(:beer_id, :value => beer.id) %>
      <span class="rating_field">
        <%= f.text_field :rate, :class => "" %>
      </span>
      <%= f.submit :class => "btn btn-primary" %>
    </fieldset>
  <% end %>  
  <br>
  <p style="font-size: 1.2em;">0.0 (worst) - 10.0 (best)
</div>		